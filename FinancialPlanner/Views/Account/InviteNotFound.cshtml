@{
    ViewBag.Title = "Invitation Not Found";
    Layout = null;
}
@Styles.Render("~/bundles/templatestyles")
@Scripts.Render("~/bundles/modernizr")
<link href="~/Content/animate.css" rel="stylesheet" />
<!DOCTYPE html>
<html lang="en" style="background-color:white !important;width:100%;">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <meta name="description" content="Abacus Financial Planner Error Page">
    <meta name="author" content="Travis McDaniel">
    <title>@ViewBag.Title | Abacus</title>
    <link href="https://fonts.googleapis.com/css?family=Audiowide" rel="stylesheet">
    <style>
        .brand {
            font-family: 'Audiowide';
            text-transform: lowercase;
        }
    </style>
</head>

<body>
    <body style="background-color:white !important;">
        <div class="container">
            <div class="row text-center">
                <h1 class="animated fadeIn brand" style="font-size:500%"><strong>Abacus Financial Planner</strong></h1>
            </div>
            <div class="row panel panel-primary" style="padding-top:50px;">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        @*panel-default*@
                        <div class="panel-heading">
                            <h3 class="panel-title">Invitation Not Found</h3>
                        </div>
                        <div class="panel-body" style="padding-bottom:0;margin-bottom:0;">
                            <p>Your invitation was not found!  You can still join the household that you were invited to join if you were given its key and password.  
                            If you already have an account, just <a href="@Url.Action("Login", "Account")">click here to Login</a>.  If you do not, you can 
                            <a href="@Url.Action("Register", "Account")">click here to Register</a>.</p>
                        </div>
                    </div>
                </div>

            </div>

        </div>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/templatescripts")
    </body>
</body>

</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
